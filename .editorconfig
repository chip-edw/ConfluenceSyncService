root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{bat,cmd}]
end_of_line = crlf

[*.md]
trim_trailing_whitespace = false

# C# minimal preferences (safe defaults)
[*.cs]
dotnet_sort_system_directives_first = true
csharp_new_line_before_open_brace = all
