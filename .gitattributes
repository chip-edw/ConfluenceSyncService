# Line ending and file normalization
# Keep LF in repo for all text; allow CRLF checkout for Windows scripts.

* text=auto

# Text/code files — force LF
*.md      text eol=lf
*.markdown text eol=lf
*.txt     text eol=lf
*.json    text eol=lf
*.yml     text eol=lf
*.yaml    text eol=lf
*.cs      text eol=lf
*.csproj  text eol=lf
*.sln     text eol=lf
*.props   text eol=lf
*.targets text eol=lf
*.ts      text eol=lf
*.tsx     text eol=lf
*.js      text eol=lf
*.jsx     text eol=lf
*.css     text eol=lf
*.scss    text eol=lf
*.ps1     text eol=lf
*.sh      text eol=lf
*.sql     text eol=lf
*.xml     text eol=lf
*.config  text eol=lf
*.mdx     text eol=lf

# Windows scripts — CRLF on checkout
*.bat     text eol=crlf
*.cmd     text eol=crlf

# Binary files (no line-ending conversion)
*.png     binary
*.jpg     binary
*.jpeg    binary
*.gif     binary
*.ico     binary
*.pdf     binary
*.zip     binary
*.7z      binary
*.dll     binary
*.exe     binary
*.pdb     binary
*.snk     binary
*.cer     binary
*.pfx     binary
*.woff    binary
*.woff2   binary
*.ttf     binary
